// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id           Int            @id @default(autoincrement())
  name         String
  uniqueId     String         @unique
  city         String
  menus        Menu[]
  Subscription Subscription[]
}

model Menu {
  id           Int        @id @default(autoincrement())
  price        Int
  date         DateTime
  restaurantId Int
  Restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  menuItemId   Int
  MenuItem     MenuItem   @relation(fields: [menuItemId], references: [id])
}

model MenuItem {
  id   Int    @id @default(autoincrement())
  name String @unique
  Menu Menu[]
}

model TeamsChannel {
  id           Int            @id @default(autoincrement())
  channelName  String
  webhookLink  String         @unique
  Subscription Subscription[]
}

model Subscription {
  id             Int          @id @default(autoincrement())
  restaurantId   Int
  teamsChannelId Int
  lastPostedDate DateTime?
  Restaurant     Restaurant   @relation(fields: [restaurantId], references: [id])
  TeamsChannel   TeamsChannel @relation(fields: [teamsChannelId], references: [id])

  @@unique([restaurantId, teamsChannelId])
}
