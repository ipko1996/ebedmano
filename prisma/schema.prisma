// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id       Int    @id @default(autoincrement())
  name     String
  uniqueId String @unique
  city     String
  menus    Menu[]
}

model Menu {
  id           Int        @id @default(autoincrement())
  name         MenuItem   @relation(fields: [menuItemId], references: [id])
  price        Int
  date         DateTime
  validUntil   DateTime
  restaurantId Int
  Restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  menuItemId   Int
}

model MenuItem {
  id   Int    @id @default(autoincrement())
  name String
  Menu Menu[]
}
