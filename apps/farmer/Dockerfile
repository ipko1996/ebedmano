# Run the container with `docker run -p 3000:3000 -t farmer`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3001

WORKDIR /app

RUN addgroup --system farmer && \
  adduser --system -G farmer farmer

COPY dist/apps/farmer farmer
RUN chown -R farmer:farmer .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix farmer --omit=dev -f install

CMD [ "node", "farmer" ]
